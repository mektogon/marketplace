FROM gradle:jdk21-alpine AS builder

COPY ../../../back/business-application ./back/business-application
COPY ../../../back/database ./back/database
COPY ../../../back/build.gradle.kts ./back/
COPY ../../../docs ./docs
COPY ../../../build.gradle.kts settings.gradle.kts lombok.config ./

RUN gradle dependencies --no-daemon

RUN gradle :back:business-application:bootJar --no-daemon --stacktrace \
    && ls -la /home/gradle/back/business-application/build/libs/

FROM eclipse-temurin:21-jre-jammy

WORKDIR /application

RUN adduser --system runner \
    && addgroup --system spring-boot-application \
    && usermod -aG spring-boot-application runner \
    && chown -R runner:spring-boot-application /application \
    && chmod 750 /application

USER runner

COPY --from=builder /home/gradle/back/business-application/build/libs/*.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]